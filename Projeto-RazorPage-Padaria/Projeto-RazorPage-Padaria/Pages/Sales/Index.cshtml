@page
@model Projeto_RazorPage_Padaria.Pages.Sales.IndexModel

@{
	ViewData["Title"] = "Index";
}
<div class="container bg-dark w-50 mx-auto">
	<h2 class="text-light mt-2">Sellings</h2>
	<div class="flex-row d-flex flex-flow-reverse justify-content-end">
		<div class="d-flex justify-content-center">
			<a asp-page="Create" class="btn btn-success d-flex align-items-center gap-2 link-light">
				<i class="bi bi-cart pb-1"></i>
				Add New
			</a>
		</div>

	</div>

	<table class="table table-striped table-dark">
		<thead>
			<tr>
				<th>
					Id
				</th>
				<th>
					Customer
				</th>
				<th>
					Total Price
				</th>
				<th>
					Options
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.Sales)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Id)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Buyer!.Name)
					</td>
					<td>
						@item.GetFinalPrice().ToString("f2")
					</td>
					<td class="d-flex justify-content-end gap-3">
						<a class="btn btn-outline-warning" asp-page="./Details" asp-route-id="@item.Id">
							<i class="bi bi-zoom-in"></i>
						</a>
						<a class="btn btn-outline-danger" asp-page="./Delete" asp-route-id="@item.Id">
							<i class="bi bi-trash"></i>
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
