@page
@model Projeto_RazorPage_Padaria.Pages.Costumers.EditModel

@{
	ViewData["Title"] = "Edit";
}
}
<div class="container bg-dark w-50 mx-auto text-light">
	<h1>Edit</h1>

	<h4>Costumer</h4>
	<hr />
	<div class="row">
		<div class="col-md-4">
			<form method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="Costumer.Id" />
				<div class="form-group">
					<label asp-for="Costumer.Name" class="control-label"></label>
					<input asp-for="Costumer.Name" class="form-control" />
					<span asp-validation-for="Costumer.Name" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Costumer.Document" class="control-label"></label>
					<input asp-for="Costumer.Document" class="form-control" />
					<span asp-validation-for="Costumer.Document" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Costumer.Points" class="control-label"></label>
					<input asp-for="Costumer.Points" class="form-control" />
					<span asp-validation-for="Costumer.Points" class="text-danger"></span>
				</div>
				<div class="form-group d-flex gap-3 mt-4">
					<input type="submit" value="Save" class="btn btn-primary" style="width: 50%;" />
					<a asp-page="./Index" class="btn btn-secondary" style="width: 50%;">Back to List</a>
				</div>
			</form>
		</div>
	</div>
</div>



@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
