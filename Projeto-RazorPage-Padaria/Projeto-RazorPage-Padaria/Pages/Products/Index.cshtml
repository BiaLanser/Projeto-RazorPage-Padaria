@page
@model Projeto_RazorPage_Padaria.Pages.Products.IndexModel

@{
	ViewData["Title"] = "Index";
}

<div class="container bg-dark w-50 mx-auto">
	<h2 class="text-light mt-2">Products</h2>
	<div class="flex-row d-flex flex-flow-reverse justify-content-end mb-5">
		<div class="d-flex justify-content-center">
			<a asp-page="Create" class="btn btn-success d-flex align-items-center gap-2 link-light">
				<i class="bi bi-cart pb-1"></i>
				Add New Product
			</a>
		</div>
	</div>

	<table class="table table-striped table-dark">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Product[0].Description)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Product[0].Price)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.Product)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Description)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Price)
					</td>
					<td class="d-flex justify-content-end gap-3">
						<a class="btn btn-outline-primary" asp-page="./Edit" asp-route-id="@item.Id">
							<i class="bi bi-zoom-in"></i>
						</a>
						<a class="btn btn-outline-warning" asp-page="./Details" asp-route-id="@item.Id">
							<i class="bi bi-gear"></i>
						</a>
						<a class="btn btn-outline-danger" asp-page="./Delete" asp-route-id="@item.Id">
							<i class="bi bi-trash pb-1"></i>
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>