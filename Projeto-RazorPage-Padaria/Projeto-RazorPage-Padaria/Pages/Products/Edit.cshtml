@page
@model Projeto_RazorPage_Padaria.Pages.Products.EditModel

@{
	ViewData["Title"] = "Edit";
}
<div class="container bg-dark w-50 mx-auto text-light">
	<h2 class="text-light mt-2">Edit</h2>
	<hr />
	<div class="row">
		<div class="col-md-4">
			<form method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="Product.Id" />
				<div class="form-group">
					<label asp-for="Product.Description" class="control-label"></label>
					<input asp-for="Product.Description" class="form-control" />
					<span asp-validation-for="Product.Description" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Product.Price" class="control-label"></label>
					<input asp-for="Product.Price" class="form-control" />
					<span asp-validation-for="Product.Price" class="text-danger"></span>
				</div>
					<div class="form-group d-flex gap-3 mt-4">
					<a asp-page="./Index" class="btn btn-secondary" style="width: 50%;">Back to List</a>
						<input type="submit" value="Save" class="btn btn-primary" style="width: 50%;" />

					</div>
			</form>
		</div>
	</div>


</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
