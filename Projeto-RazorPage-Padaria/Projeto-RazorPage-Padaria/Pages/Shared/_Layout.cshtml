<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Projeto_RazorPage_Padaria</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/Projeto_RazorPage_Padaria.styles.css" asp-append-version="true" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex-grow: 1; /* Faz o main ocupar o espaço restante */
        }

        .navbar {
            padding-left: 50px;  
            padding-right: 50px;
        }

        .container {
            max-width: 100%;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow bg-dark">
            <div class="container">
                <div class="navbar-collapse collapse d-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn-sm" href="/Index" role="button">
                                <i class="bi bi-house" style="font-size: 2rem; color: white;"></i>
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto gap-4 pt-3">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Products/Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Customers/Index">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Sales/Index">Sales</a>
                        </li>
                        <li class="nav-item ms-3 mt-1">
                            <a style="height: 30px;" class="btn btn-primary d-flex align-items-center justify-content-center" href="https://github.com/BiaLanser/Projeto-RazorPage-Padaria.git" role="button">
                                <i class="bi bi-github me-2" style="width: 1rem; margin-bottom: 4px"></i>
                                GitHub
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container bg-dark" style="flex-grow: 1;">
        <main>
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted bg-dark">
        <div class="container">
            &copy; 2024 - Projeto_RazorPage_Padaria - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-loading-overlay@1.1.0/dist/js-loading-overlay.min.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js" asp-append-version="true"></script>
    <script src="https://html2canvas.hertzen.com/dist/html2canvas.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
